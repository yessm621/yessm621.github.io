		<span class="c1">// System.out.println(t.hour);</span>
		<span class="n">t</span><span class="o">.</span><span class="na">setHour</span><span class="o">(</span><span class="mi">21</span><span class="o">);</span>
		<span class="nc">System</span><span class="o">.</span><span class="na">out</span><span class="o">.</span><span class="na">println</span><span class="o">(</span><span class="n">t</span><span class="o">.</span><span class="na">getHour</span><span class="o">());</span> <span class="c1">// 21</span>

		<span class="n">t</span><span class="o">.</span><span class="na">setHour</span><span class="o">(</span><span class="mi">100</span><span class="o">);</span>
		<span class="nc">System</span><span class="o">.</span><span class="na">out</span><span class="o">.</span><span class="na">println</span><span class="o">(</span><span class="n">t</span><span class="o">.</span><span class="na">getHour</span><span class="o">());</span> <span class="c1">// 21, ê²°ê³¼ ì•ˆë°”ë€œ</span>
	<span class="o">}</span>
<span class="o">}</span>
</code></pre></div></div>

